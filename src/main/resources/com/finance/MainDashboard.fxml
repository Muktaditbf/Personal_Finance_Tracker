<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance.DashboardController" styleClass="app-root">
   <top>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER" styleClass="top-bar">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <HBox spacing="12.0" alignment="CENTER_LEFT">
                <children>
                    <Label text="ðŸ’¼ Finance" styleClass="app-title" />
                </children>
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="totalBalanceLabel" text="Total Balance: $0.00" styleClass="total-balance" />
            <ComboBox fx:id="monthComboBox" prefWidth="180" styleClass="month-picker" />
            <Button fx:id="exportButton" text="Export" styleClass="secondary-button" />
            <ToggleButton fx:id="themeToggle" text="Dark" />
            <Button fx:id="settingsButton" text="âš™" />
         </children>
      </HBox>
   </top>
   <center>
      <HBox spacing="20.0" BorderPane.alignment="CENTER" styleClass="center-panel responsive-center">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <VBox spacing="8.0" HBox.hgrow="ALWAYS" maxWidth="-Infinity" alignment="TOP_CENTER">
                <children>
                    <Label text="Expenses by Category (This Month)" styleClass="section-title" />
                    <StackPane styleClass="chart-container" HBox.hgrow="ALWAYS">
                        <children>
                            <PieChart fx:id="expensesChart" title="" styleClass="expenses-chart" />
                        </children>
                    </StackPane>
                </children>
            </VBox>

            <ScrollPane fitToWidth="true" prefWidth="360" maxWidth="420">
                <content>
                    <VBox spacing="12.0" styleClass="right-panel card form-card">
                        <padding>
                            <Insets top="18.0" right="18.0" bottom="18.0" left="18.0" />
                        </padding>
                        <children>
                            <Label text="Add Transaction" styleClass="section-title" />

                            <Label text="Amount:" styleClass="form-label" />
                            <TextField fx:id="amountField" promptText="Enter amount" styleClass="form-control text-field" />

                            <Label text="Category:" styleClass="form-label" />
                            <ComboBox fx:id="categoryComboBox" promptText="Select category" styleClass="form-control combo-box" />

                            <Label text="Account:" styleClass="form-label" />
                            <ComboBox fx:id="accountComboBox" promptText="Select account" styleClass="form-control combo-box" />

                            <Label text="Note:" styleClass="form-label" />
                            <TextArea fx:id="noteField" promptText="Enter note (optional)" prefRowCount="3" wrapText="true" styleClass="form-control text-area" />

                            <Button fx:id="saveButton" onAction="#handleSave" text="Save" styleClass="primary-button" />
                        </children>
                    </VBox>
                </content>
            </ScrollPane>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER" styleClass="status-bar">
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="statusBarLabel" text="Status: Ready" styleClass="status-label" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
